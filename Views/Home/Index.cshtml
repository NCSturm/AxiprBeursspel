@model List<TopScoreModel>

@{
    ViewBag.Title = "Home";
    Layout = "_Layout";
}

<div class="row">
  <div class="col-md-6">
    <div class="box box-solid">
      <div class="box-header with-border">
        <i class="fa fa-thumbs-up"></i>

        <h3 class="box-title">Welkom!</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <p>
          Hier komt dus echt een moeilijk gaaf stukje over wat het precies is en hoe het werkt. <br/>
          Ben daar nu alleen te lui voor.
        </p>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
  <div class="col-md-6">
    <div class="box box-solid">
      <div class="box-header with-border">
        <i class="fa fa-eur"></i>

        <h3 class="box-title">Top Scores</h3>
      </div>
      <!-- /.box-header -->
      <div class="box-body">
        <table class="table">
          <thead>
          <tr>
            <th>Naam</th>
            <th>Waarde</th>
          </tr>
          </thead>
          @foreach (var speler in Model)
          {
            <tr>
              <td>@speler.Naam</td>
              <td>@speler.Waarde.ToString("F2")</td>
            </tr>
          }
        </table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>

@section scripts{
  <script src="lib/jquery-datatables/jquery.dataTables.js"></script>
  <script src="lib/bootstrap-datatables/dataTables.bootstrap.js"></script>

}