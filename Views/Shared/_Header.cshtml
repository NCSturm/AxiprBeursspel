<header class="main-header">
  <a href="~/" class="logo">
    <!-- LOGO -->
    Axipr Beursspel
  </a>
  <!-- Header Navbar: style can be found in header.less -->
  <nav class="navbar navbar-static-top" role="navigation">
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>

    <!-- Navbar Right Menu -->
    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <!-- User Account: style can be found in dropdown.less -->
        <li class="dropdown user user-menu">
          @if (User.Identity.IsAuthenticated)
          {
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="">@User.Identity.Name</span>
              <span id="waarde-houder" style="margin-left: 10px;"></span>
            </a>
          }
          else
          {
            <a href="@Url.Action("Login", "Account")">
              <span class="">Login</span>
            </a>

          }
          <ul class="dropdown-menu">
            <!-- User image -->
            <li class="user-header">
              <p>
                @User.Identity.Name
              </p>
            </li>
            <!-- Menu Body -->
            <li class="user-body">
              <div class="col-xs-4 text-center">
                <a href="#">Followers</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Sales</a>
              </div>
              <div class="col-xs-4 text-center">
                <a href="#">Friends</a>
              </div>
            </li>
            <!-- Menu Footer-->
            <li class="user-footer">
              <div class="pull-left">
                <a href="@Url.Action("Index", "Manage")" class="btn btn-default btn-flat">Account</a>
              </div>
              <div class="pull-right">
                <a href="@Url.Action("Logout", "Account")" class="btn btn-default btn-flat">Log uit</a>
              </div>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</header>