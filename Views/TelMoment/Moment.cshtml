@model Beursspel.Models.TelMomentModels.TelMomentHouder

@{
    ViewBag.Title = Model.Invoerder == null ? "Telmoment Toevoegen" : "Telmoment Aanpassen";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-xs-12 col-sm-6">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Aantallen</h3>
            </div>
            <div class="box-body">
                <form asp-action="Opslaan" method="post">
                    @Html.HiddenFor(houder => houder.Tijd)
                    @Html.HiddenFor(houder => houder.Invoerder)
                    @Html.HiddenFor(houder => houder.TelMomentHouderId)
                    @for (var index = 0; index < Model.Beurzen.Count; index++)
                    {
                        <div class="form-group">
                            <label class="col-lg-4">@Model.Beurzen[index].BeursNaam</label>
                            <div class="col-lg-8">
                                @Html.HiddenFor(houder => houder.Beurzen[index].BeursNaam)
                                @Html.HiddenFor(houder => houder.Beurzen[index].BeursId)
                                @Html.EditorFor(houder => houder.Beurzen[index].Aantal, new {htmlAttributes = new {@class = "form-control"}})
                            </div>
                        </div>
                        <br/>
                    }
                    <br/><br/>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Opslaan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
